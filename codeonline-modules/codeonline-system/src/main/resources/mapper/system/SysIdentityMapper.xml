<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codeonline.system.mapper.SysIdentityMapper">
	<resultMap type="com.codeonline.system.domain.SysSimpleDept" id="SysSimpleDeptResult">
		<id     property="deptId"     column="dept_id"     />
		<result property="deptName"   column="dept_name"   />
	</resultMap>
	<insert id="addForms" parameterType="com.codeonline.system.domain.SysIdentity">
	insert into sys_my_identity (user_id,identity_id,college_id,class_id,approver_id,create_by,create_time,update_by,update_time,remark)
	values (#{userId},#{identityId},#{collegeId},#{classId},#{approverId},#{createBy},sysdate(),#{updateBy},sysdate(),#{remark})
	</insert>

	<select id="selectColleges" resultMap="SysSimpleDeptResult">
		SELECT
			dept_id,
			dept_name
		FROM
			sys_dept
		WHERE
			parent_id = 100
	</select>

	<select id="selectClasses" parameterType="int" resultMap="SysSimpleDeptResult">
		SELECT
			dept_id,
			dept_name
		FROM
			sys_dept
		WHERE
			parent_id = #{deptId}
	</select>
</mapper>